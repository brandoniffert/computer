---
extends: default
rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1
  comments:
    min-spaces-from-content: 1
  indentation:
    spaces: 2
  line-length:
    level: warning
    max: 120
  trailing-spaces: enable
